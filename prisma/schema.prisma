model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  role     String @default("user")
}

model HomeHero {
  id      String          @id @default(auto()) @map("_id") @db.ObjectId
  heading String
  images  HomeHeroImage[]
  links   HomeHeroLink[]
}

type HomeHeroImage {
  url String
}

type HomeHeroLink {
  url   String
  text  String?
  icon  String?
}

model CouponSection {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  carouselTitle   String
  offers          CouponOffer[]
  viewAllBtnLabel String?
  viewAllBtnUrl   String?
}

type CouponOffer {
  slug             String
  offerImage       String
  badgeLabel       String?
  icon             String?
  offerTitle       String
  offerSubtitle    String?
  offerDescription String
  promoCode        String?
  discount         String?
  heroImage        String?
  longDescription  String?
  dates            String?
  location         String?
  features         String[]
  inclusions       String[]
  images           String[]
}

model StreamlineToken {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  tokenKey    String   @unique
  tokenSecret String
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BlogCategory {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  title       String
  subtitle    String?
  heroImage   String
  description String?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Blog {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  categoryId      String   @db.ObjectId
  slug            String   @unique
  title           String
  subtitle        String?
  heroImage       String
  content         String
  excerpt         String?
  metaTitle       String?
  metaDescription String?
  ogImage         String?
  tags            String[]
  published       Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Media {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  publicId  String   @unique
  url       String
  format    String?
  width     Int?
  height    Int?
  bytes     Int?
  filename  String?
  createdAt DateTime @default(now())
}

model Footer {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  sections    FooterSection[]
  socialLinks SocialLink[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

type FooterSection {
  id    String
  title String
  links FooterLink[]
}

type FooterLink {
  id         String
  label      String
  url        String
  isExternal Boolean @default(false)
  newTab     Boolean @default(false)
}

type SocialLink {
  id       String
  platform String?
  url      String
  icon     String
  altText  String?
}

model Wishlist {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @db.ObjectId
  propertyId String
  imageUrl   String?
  createdAt  DateTime @default(now())

  @@unique([userId, propertyId])
}

model ExperiencesPage {
  id              String                 @id @default(auto()) @map("_id") @db.ObjectId
  heroTitle       String
  heroSubtitle    String?
  heroTagline     String?
  heroDescription String?
  heroImage       String
  heroCtaText     String?
  heroCtaLink     String?
  heroIsActive    Boolean                @default(true)
  formCards       ExperienceFormCard[]
  isPublished     Boolean                @default(false)
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
}

type ExperienceFormCard {
  id          String
  title       String
  image       String
  subtitle    String?
  cost        String?
  date        String?
  time        String?
  includes    String[]
  description String?
  isPopular   Boolean
  isActive    Boolean
  order       Int
  fields      ExperienceFormField[]
}

type ExperienceFormField {
  id          String
  label       String
  name        String
  type        String
  placeholder String?
  required    Boolean
  options     String[]
  order       Int
}

model ExperienceFormResponse {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  formCardId  String
  responses   Json
  submittedAt DateTime @default(now())
  status      String   @default("new")
  userAgent   String?
  ip          String?
  honeypot    String?

  @@index([userId, submittedAt])
}

